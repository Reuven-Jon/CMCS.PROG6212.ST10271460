@model IEnumerable<CMCS.PROG6212.ST10271460.Models.Claim>
@{
    var username = Context.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Dashboard</title>
    <style>
        body {
            background-color: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .header {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            text-align: center;
        }

        .container {
            padding: 20px;
        }

        .card {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #4CAF50;
        }

        .btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>Lecturer Dashboard</h1>
    </div>

    <div class="container">
        <!-- Welcome message pop-up -->
        <div id="welcome-popup" class="card">
            <h2>Welcome to the Lecturer Dashboard, @username!</h2>
            <p>This is your space to manage your claims.</p>
        </div>

        <!-- Claims summary section -->
        <div class="card">
            <h2>Your Claims</h2>
            <table border="1" cellpadding="10" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Claim Period</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Submitted Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimPeriod.ToString("MMMM yyyy")</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                            <td>@claim.Amount.ToString("C")</td>
                            <td>@claim.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Button to Submit a New Claim -->
        <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn">Submit New Claim</a>
    </div>

    <script>
        // Show welcome popup and fade out after 3 seconds
        setTimeout(function () {
            document.getElementById('welcome-popup').style.display = 'none';
        }, 3000);
    </script>
</body>
</html>

