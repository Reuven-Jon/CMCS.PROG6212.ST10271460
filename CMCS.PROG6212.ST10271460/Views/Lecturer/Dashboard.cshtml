@model IEnumerable<CMCS.PROG6212.ST10271460.Models.Claim>

<link rel="stylesheet" href="~/css/styles.css">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Dashboard</title>
    <style>
        /* Styling remains the same */
        body {
            background-color: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            padding: 20px;
            background-color: #ffffff;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #4CAF50;
            text-align: center;
        }

        .summary {
            margin-bottom: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 10px;
            text-align: center;
        }

        .summary-card {
            flex: 1 1 calc(25% - 20px);
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            min-width: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            text-align: center;
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-info:hover {
                background-color: #138496;
            }

        .status {
            font-weight: bold;
        }

            .status.pending {
                color: orange;
            }

            .status.approved {
                color: green;
            }

            .status.rejected {
                color: red;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Lecturer Dashboard</h2>

        <!-- Summary Section -->
        <div class="summary">
            <div class="summary-card">
                <h4>Total Claims</h4>
                <p>@Model?.Count() ?? 0</p>
            </div>
            <div class="summary-card">
                <h4>Pending Claims</h4>
                <p>@Model?.Count(c => c.Status == CMCS.PROG6212.ST10271460.Models.ClaimStatus.Pending) ?? 0</p>
            </div>
            <div class="summary-card">
                <h4>Approved Claims</h4>
                <p>@Model?.Count(c => c.Status == CMCS.PROG6212.ST10271460.Models.ClaimStatus.Approved) ?? 0</p>
            </div>
            <div class="summary-card">
                <h4>Rejected Claims</h4>
                <p>@Model?.Count(c => c.Status == CMCS.PROG6212.ST10271460.Models.ClaimStatus.Rejected) ?? 0</p>
            </div>
        </div>

        <!-- Claims Table -->
        <table>
            <thead>
                <tr>
                    <th>Claim Period</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date Submitted</th>
                    <th>Document</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimPeriod.ToString("MMMM yyyy")</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Amount.ToString("C")</td>
                            <td>
                                <span class="status @claim.Status.ToString().ToLowerInvariant()">@claim.Status</span>
                            </td>
                            <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim?.DocumentPath))
                                {
                                    <a href="@claim.DocumentPath" target="_blank" class="btn btn-info">View Document</a>
                                }
                                else
                                {
                                    <span>No document</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">No claims available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


