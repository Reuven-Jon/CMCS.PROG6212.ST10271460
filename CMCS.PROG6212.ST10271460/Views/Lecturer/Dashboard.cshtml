@model IEnumerable<CMCS.PROG6212.ST10271460.Models.Claim>

<link rel="stylesheet" href="~/css/styles.css">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Dashboard</title>
    <style>
        body {
            background-color: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            padding: 20px;
            background-color: #ffffff;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #4CAF50;
            text-align: center;
        }

        .summary {
            margin-bottom: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 10px;
            text-align: center;
        }

        .summary-card {
            flex: 1 1 calc(25% - 20px);
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            min-width: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            text-align: center;
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-info:hover {
                background-color: #138496;
            }

        .status {
            font-weight: bold;
        }

            .status.pending {
                color: orange;
            }

            .status.approved {
                color: green;
            }

            .status.rejected {
                color: red;
            }

        .hamburger {
            cursor: pointer;
            display: inline-block;
            margin-bottom: 15px;
        }

            .hamburger .bar {
                width: 30px;
                height: 3px;
                background-color: #333;
                margin: 6px auto;
                transition: all 0.3s ease;
            }

            .hamburger.active .bar:nth-child(1) {
                transform: rotate(-45deg) translate(-5px, 5px);
            }

            .hamburger.active .bar:nth-child(2) {
                opacity: 0;
            }

            .hamburger.active .bar:nth-child(3) {
                transform: rotate(45deg) translate(-5px, -5px);
            }

        .nav-menu {
            display: none;
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .nav-menu.active {
                display: block;
            }

            .nav-menu a {
                display: block;
                padding: 10px;
                background-color: #4CAF50;
                color: white;
                text-decoration: none;
                margin-bottom: 5px;
                text-align: center;
                border-radius: 5px;
            }

                .nav-menu a:hover {
                    background-color: #45a049;
                }
    </style>
</head>
<body>
    <!-- Hamburger Menu -->
    <div class="hamburger" id="hamburger">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
    </div>

    <div class="nav-menu" id="nav-menu">
        <a href="/Lecturer/SubmitClaim">Submit Claim</a>
        <a href="/Lecturer/Dashboard">Your Claims</a>
        <a href="/Account/Logout">Logout</a>
    </div>

    <div class="container">
        <h2>Lecturer Dashboard</h2>

        <!-- Summary Section -->
        <div class="summary">
            <div class="summary-card">
                <h4>Total Claims</h4>
                <p>@Model.Count()</p>
            </div>
            <div class="summary-card">
                <h4>Pending Claims</h4>
                <p>@Model.Count(c => c.Status == "Pending")</p>
            </div>
            <div class="summary-card">
                <h4>Approved Claims</h4>
                <p>@Model.Count(c => c.Status == "Approved")</p>
            </div>
            <div class="summary-card">
                <h4>Rejected Claims</h4>
                <p>@Model.Count(c => c.Status == "Rejected")</p>
            </div>
        </div>

        <!-- Claims Table -->
        <table>
            <thead>
                <tr>
                    <th>Claim Period</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date Submitted</th>
                    <th>Document</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimPeriod.ToString("MMMM yyyy")</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("C")</td>
                        <td>@claim.Amount.ToString("C")</td>
                        <td><span class="status @claim.Status.ToLower()">@claim.Status</span></td>
                        <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim?.DocumentPath))
                            {
                                <a href="@claim.DocumentPath" target="_blank" class="btn btn-info">View Document</a>
                            }
                            else
                            {
                                <span>No document</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        // Toggle Hamburger Menu
        document.getElementById('hamburger').addEventListener('click', function () {
            const navMenu = document.getElementById('nav-menu');
            this.classList.toggle('active');
                    navMenu.classList.toggle('active');
        });
    </script>
</body>
</html>








