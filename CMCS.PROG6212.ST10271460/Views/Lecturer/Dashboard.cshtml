@model IEnumerable<CMCS.PROG6212.ST10271460.Models.Claim>

<link rel="stylesheet" href="~/css/styles.css">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Dashboard</title>
    <style>
        body {
            background-color: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            padding: 20px;
            background-color: #ffffff;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #4CAF50;
            text-align: center;
        }

        .summary {
            margin-bottom: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 10px;
            text-align: center;
        }

        .summary-card {
            flex: 1 1 calc(25% - 20px);
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            min-width: 150px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            text-align: center;
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .btn-info {
            background-color: #17a2b8;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-info:hover {
                background-color: #138496;
            }

        .status {
            font-weight: bold;
        }

            .status.pending {
                color: orange;
            }

            .status.approved {
                color: green;
            }

            .status.rejected {
                color: red;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2>Lecturer Dashboard</h2>
        <p>Welcome, @Context.Session.GetString("Username")!</p>

        <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary"
           data-bs-toggle="tooltip"
           data-bs-placement="right"
           title="Click to submit a new claim.">
            Submit New Claim
        </a>

        <!-- Summary Section -->
        <div class="summary">
            <div class="summary-card" data-bs-toggle="tooltip" data-bs-placement="top" title="Total number of claims submitted.">
                <h4>Total Claims</h4>
                <p>@Model?.Count() ?? 0</p>
            </div>
            <div class="summary-card" data-bs-toggle="tooltip" data-bs-placement="top" title="Number of claims pending review.">
                <h4>Pending Claims</h4>
                <p>@Model?.Count(c => c.Status == ClaimStatus.Pending) ?? 0</p>
            </div>
            <div class="summary-card" data-bs-toggle="tooltip" data-bs-placement="top" title="Number of claims that have been approved.">
                <h4>Approved Claims</h4>
                <p>@Model?.Count(c => c.Status == ClaimStatus.Approved) ?? 0</p>
            </div>
            <div class="summary-card" data-bs-toggle="tooltip" data-bs-placement="top" title="Number of claims that were rejected.">
                <h4>Rejected Claims</h4>
                <p>@Model?.Count(c => c.Status == ClaimStatus.Rejected) ?? 0</p>
            </div>
        </div>

        <!-- Claims Table -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Claim Period</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date Submitted</th>
                    <th>Document</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimPeriod.ToString("MMMM yyyy")</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Amount.ToString("C")</td>
                            <td><span class="status @claim.Status.ToString().ToLower()">@claim.Status</span></td>
                            <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                {
                                    <a href="@claim.DocumentPath" target="_blank" class="btn btn-info"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="left"
                                       title="Click to view the uploaded document.">View Document</a>
                                }
                                else
                                {
                                    <span>No document</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">No claims available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="?filter=@Context.Request.Query["filter"]&page=@i">@i</a>

                    </li>
                }
            </ul>
        </nav>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.17/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/claimHub")
            .build();

        connection.start().then(() => {
            console.log("SignalR connected.");
        });

        // Listen for updates
        connection.on("ReceiveClaimUpdate", (claimId, status, note) => {
            alert(`Claim ID: ${claimId} has been ${status}. Note: ${note}`);
            location.reload(); // Refresh the page to show updated claims
        });
    </script>
</body>
</html>


