@model IEnumerable<CMCS.PROG6212.ST10271460.Models.Claim>

<div class="container mt-5">
    <h2 class="text-center">Coordinator/Manager Dashboard</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Lecturer Name</th>
                <th>Claim Period</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ContractorName</td>
                    <td>@claim.ClaimPeriod.ToString("MMMM yyyy")</td>
                    <td>@claim.Amount.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>
                        @switch (claim.Status)
                        {
                            case CMCS.PROG6212.ST10271460.Models.ClaimStatus.Pending:
                                <form method="post" action="/Manager/ApproveClaim">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="claimId" value="@claim.ClaimID" />
                                    <button type="submit" class="btn btn-success"
                                            onclick="return confirm('Are you sure you want to approve this claim?');">
                                        Approve
                                    </button>
                                </form>
                                <form method="post" action="/Manager/RejectClaim">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="claimId" value="@claim.ClaimID" />
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to reject this claim?');">
                                        Reject
                                    </button>
                                </form>
                                break;
                            case CMCS.PROG6212.ST10271460.Models.ClaimStatus.Approved:
                                <span class="badge bg-success">Approved</span>
                                break;
                            case CMCS.PROG6212.ST10271460.Models.ClaimStatus.Rejected:
                                <span class="badge bg-danger">Rejected</span>
                                break;
                            default:
                                <span class="badge bg-secondary">Unknown Status</span>
                                break;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
 
