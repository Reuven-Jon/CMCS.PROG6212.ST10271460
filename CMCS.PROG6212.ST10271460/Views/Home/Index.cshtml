@model IEnumerable<CMCS.PROG6212.ST10271460.Models.Claim>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Monthly Claim System - Homepage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding-top: 50px;
        }

        .login-section {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-section button {
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .button-group {
            text-align: right;
            margin-top: 20px;
        }

            .button-group button {
                padding: 10px 15px;
                font-size: 16px;
                margin-left: 10px;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Login Button Section -->
        <div class="login-section">
            <h2>Welcome to the Contract Monthly Claim System</h2>
            <p>Please log in to view and manage your claims.</p>
            <button onclick="location.href='@Url.Action("MonthlyClaims", "Claim")'">Login to View Claims</button>

        </div>

        <!-- Monthly Claims Table -->
        <h3>Monthly Claims Overview</h3>
        <table>
            <thead>
                <tr>
                    <th>Lecturer Name / Company Name</th>
                    <th>Claim Period</th>
                    <th>Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td> <!-- Changed from ContractorName to LecturerName -->
                            <td>@claim.ClaimPeriod.ToString("MMMM yyyy")</td>
                            <td>@claim.Amount.ToString("C")</td>
                            <td>@claim.Status</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" style="text-align: center;">No claims available.</td>
                    </tr>
                }
            </tbody>

        </table>

        <!-- Button Group (Submit Claim and Manage Claims) -->
        <div class="button-group">
            <button onclick="location.href='@Url.Action("Submit", "Claim")'">Submit Claim</button>
            <button onclick="location.href='@Url.Action("Manage", "Claim")'">Manage Claims</button>
        </div>
    </div>
</body>
</html>

