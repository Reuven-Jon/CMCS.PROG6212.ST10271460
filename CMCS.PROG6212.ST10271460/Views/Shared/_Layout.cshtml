<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* Hamburger Menu CSS */
        .hamburger {
            display: block;
            width: 30px;
            height: 3px;
            background-color: #000;
            margin: 6px auto;
            transition: all 0.3s ease;
        }

        .menu-btn {
            cursor: pointer;
            display: inline-block;
        }

        .menu-btn.open .hamburger:nth-child(1) {
            transform: rotate(-45deg) translate(-5px, 5px);
        }

        .menu-btn.open .hamburger:nth-child(2) {
            opacity: 0;
        }

        .menu-btn.open .hamburger:nth-child(3) {
            transform: rotate(45deg) translate(-5px, -5px);
        }

        .menu-items {
            display: none;
            list-style-type: none;
            padding: 0;
            margin: 0;
            position: absolute;
            top: 60px;
            right: 10px;
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            overflow: hidden;
        }

        .menu-items.open {
            display: block;
        }

        .menu-items li {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .menu-items li:last-child {
            border-bottom: none;
        }

        .menu-items li a {
            color: #333;
            text-decoration: none;
            display: block;
        }

        .menu-items li:hover {
            background-color: #007bff;
        }

        .menu-items li:hover a {
            color: white;
        }

        .nav-item {
            margin-left: 10px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">CMCS</a>
            <button class="navbar-toggler menu-btn" type="button" onclick="toggleMenu()">
                <span class="hamburger"></span>
                <span class="hamburger"></span>
                <span class="hamburger"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <span class="nav-link">Hello, @Context.Session.GetString("Username")!</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Account")">Switch Role</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Feedback" asp-action="Submit">Submit Feedback</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Feedback" asp-action="ViewFeedback">View Feedback</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
                    </li>
                </ul>
            </div>

            <!-- Hamburger Menu Items -->
            <ul id="hamburger-menu" class="menu-items">
                @if (Context.Session.GetString("UserRole") == "Lecturer")
                {
                    <li><a href="/Lecturer/Dashboard">Dashboard</a></li>
                    <li><a href="/Lecturer/SubmitClaim">Submit Claims</a></li>
                }
                @if (Context.Session.GetString("UserRole") == "AcademicManager")
                {
                    <li><a href="/Manager/Dashboard">Dashboard</a></li>
                    <li><a href="/Manager/ManageClaims">Manage Claims</a></li>
                }
                @if (Context.Session.GetString("UserRole") == "HR")
                {
                    <li><a href="/HR/Dashboard">HR Dashboard</a></li>
                    <li><a href="/HR/ManageApprovals">Manage Approvals</a></li>
                }
                <li><a href="/Feedback/Submit">Submit Feedback</a></li>
                <li><a href="/Feedback/ViewFeedback">View Feedback</a></li>
                <li><a href="/Account/Logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CMCS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Toggle Menu Functionality -->
    <script>
        function toggleMenu() {
            const menu = document.getElementById('hamburger-menu');
            const menuBtn = document.querySelector('.menu-btn');
            menu.classList.toggle('open');
            menuBtn.classList.toggle('open');
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>


    <!-- Include jQuery and Bootstrap JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
