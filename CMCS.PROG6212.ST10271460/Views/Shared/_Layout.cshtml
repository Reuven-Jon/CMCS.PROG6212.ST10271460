<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Hamburger Menu CSS */
        .hamburger {
            display: block;
            width: 30px;
            height: 3px;
            background-color: #fff;
            margin: 6px auto;
            transition: all 0.3s ease;
        }

        .menu-btn {
            cursor: pointer;
            display: inline-block;
        }

            .menu-btn.open .hamburger:nth-child(1) {
                transform: rotate(-45deg) translate(-5px, 5px);
            }

            .menu-btn.open .hamburger:nth-child(2) {
                opacity: 0;
            }

            .menu-btn.open .hamburger:nth-child(3) {
                transform: rotate(45deg) translate(-5px, -5px);
            }

        .menu-items {
            display: none;
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .menu-items.open {
                display: block;
            }

            .menu-items li {
                padding: 10px;
                background-color: #333;
                color: white;
            }

                .menu-items li a {
                    color: white;
                    text-decoration: none;
                }

                .menu-items li:hover {
                    background-color: #555;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">CMCS</a>
            <div class="menu-btn" onclick="toggleMenu()">
                <div class="hamburger"></div>
                <div class="hamburger"></div>
                <div class="hamburger"></div>
            </div>
            <ul id="hamburger-menu" class="menu-items">
                <!-- Links based on the role -->
                @if (Context.Session.GetString("UserRole") == "Lecturer")
                {
                    <li><a href="/Lecturer/Dashboard">Dashboard</a></li>
                    <li><a href="/Lecturer/SubmitClaim">Submit Claims</a></li>
                }
                @if (Context.Session.GetString("UserRole") == "Coordinator" || Context.Session.GetString("UserRole") == "Manager")
                {
                    <li><a href="/Manager/Dashboard">Manager Dashboard</a></li>
                    <li><a href="/Manager/ManageClaims">Manage Claims</a></li>
                }

                <li><a href="/Account/Logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CMCS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        function toggleMenu() {
            var menu = document.getElementById('hamburger-menu');
            var menuBtn = document.querySelector('.menu-btn');
            menu.classList.toggle('open');
            menuBtn.classList.toggle('open');
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


