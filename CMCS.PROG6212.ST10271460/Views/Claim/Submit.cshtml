@model CMCS.PROG6212.ST10271460.Models.Claim

<h2>Submit a New Claim</h2>

<form asp-action="SubmitClaim" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="ClaimPeriod">Claim Period</label>
        <input asp-for="ClaimPeriod" class="form-control" type="date" required />
    </div>

    <div class="form-group">
        <label for="HoursWorked">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" type="number" required />
    </div>

    <div class="form-group">
        <label for="HourlyRate">Hourly Rate</label>
        <input asp-for="HourlyRate" class="form-control" type="number" required />
    </div>

    <div class="form-group">
        <label for="Amount">Amount</label>
        <input asp-for="Amount" class="form-control" type="number" readonly />
    </div>

    <!-- File upload for the document -->
    <div class="form-group">
        <label for="Document">Upload PDF Document</label>
        <input type="file" name="Document" class="form-control" accept=".pdf" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>







