@model CMCS.PROG6212.ST10271460.Models.Claim

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Claim</title>
</head>
<body>
    <div class="container">
        <h2>Submit a New Claim</h2>

        <form method="post" enctype="multipart/form-data">
            <div>
                <label>Hours Worked</label>
                <input type="number" name="HoursWorked" step="0.01" required />
            </div>

            <div>
                <label>Hourly Rate</label>
                <input type="number" name="HourlyRate" step="0.01" required />
            </div>

            <div>
                <label>Additional Notes</label>
                <textarea name="Notes"></textarea>
            </div>

            <div>
                <label>Upload Supporting Document</label>
                <input type="file" name="supportingDocument" />
            </div>

            <div>
                <button type="submit">Submit Claim</button>
            </div>
        </form>
    </div>
</body>
</html>


